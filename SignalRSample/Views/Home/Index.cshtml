@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row border p-1 mt-3">
        <h3>Subscribed List: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <label style="color:#B52033" id="lbl_subscribeJoined"></label>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Subscribe: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033" id="btn_rock">Rock</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50" id="btn_paper">Paper</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#EDB526" id="btn_scissor">Scissor</button>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Unsubscribe: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033; display:none;" id="btn_un_rock">Rock</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50; display:none;" id="btn_un_paper">Paper</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#EDB526; display:none;" id="btn_un_scissor">Scissor</button>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Trigger Notification: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033" id="trigger_rock">Rock</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50" id="trigger_paper">Paper</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#EDB526" id="trigger_scissor">Scissor</button>
            </div>
        </div>
    </div>
    <div class="row border p-1">
        <h3>Rock, paper, scissor competition!</h3>
        <div class="col-4">
            <div> Rock: <span id="RockCounter"></span></div>
        </div>
        <div class="col-4">
            <div> Paper: <span id="PaperCounter"></span></div>
        </div>
        <div class="col-4">
            <div> Scissor: <span id="ScissorCounter"></span></div>
        </div>
        <hr />
        <p>Url to Vote:</p>
        <a class="btn border m-1" href="https://localhost:7001/Home/RockPaperScissorRace?vote=Rock">Rock</a>
        <a class="btn border m-1" href="https://localhost:7001/Home/RockPaperScissorRace?vote=Paper">Paper</a>
        <a class="btn border m-1" href="https://localhost:7001/Home/RockPaperScissorRace?vote=Scissor">Scissor</a>
    </div>
        <div class="row bg-lightGreen">
            <div class="col-3">Total views: </div>
            <div class="col-4">
                <span id="totalViewsContainer"> </span>
            </div>
        </div>
    <div class="row bg-lightGreen ">
        <div class="col-3">Total online users: </div>
        <div class="col-4">
            <span id="totalUsersContainer"> </span>
        </div>
    </div>
</div>
<script src="~/js/signalr.js"></script>
<script src="~/js/usersCount.js"></script>
<script src="~/js/rockPaperScissor.js"></script>
<script src="~/js/Subscribe.js"></script>